generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  createdAt    DateTime  @default(now())
  progress     Progress?
}

model Progress {
  id                 String   @id @default(cuid())
  userId             String   @unique
  currentChapterIndex Int      @default(1)
  lastDeliveredDate  DateTime?
  user               User     @relation(fields: [userId], references: [id])
}

model Chapter {
  id            String  @id @default(cuid())
  sequence      Int     @unique
  book          String
  chapterNumber Int
  content       String
}
